<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h3>エリア編集</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <%= form_with(model: @area, url:"/admin/areas/#{@area.id}", local: true) do |f| %>
        <%= f.label :都道府県 %>
        <%= f.text_field :name, class: 'form-control' %>
        <%= f.submit "変更を保存", class: "btn btn-primary" %>
        <%= link_to "戻る", admin_areas_path, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>