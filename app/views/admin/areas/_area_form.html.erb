<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_with(model: @area, url:url, local: true) do |f| %>
      <%= render 'shared/error_messages', db: @area %>
      <%= f.label :エリア名 %>
      <%= f.text_field :name, class: 'form-control' %>

      <% if current_page?(admin_areas_path) %>
        <%= f.submit "保存", class: "btn btn-primary" %>
      <% else %>
        <%= f.submit "保存", class: "btn btn-primary" %>
        <%= link_to "戻る", admin_areas_path, class: "btn btn-primary" %>
      <% end %>
    <% end %>
  </div>
</div>