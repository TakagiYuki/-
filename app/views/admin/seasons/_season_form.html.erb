<div class="col-md-8 col-md-offset-2">
  <%= form_with(model: @season, url:url, local: true) do |f| %>
  <%= render 'shared/error_messages', db: @season %>

    <%= f.label :名前 %>
    <%= f.text_field :name, class: 'form-control' %>

    <% if current_page?(admin_seasons_path) %>
      <%= f.submit "保存", class: "btn btn-primary" %>
    <% else %>
      <%= f.submit "保存", class: "btn btn-primary" %>
      <%= link_to "戻る", admin_seasons_path, class: "btn btn-primary" %>
    <% end %>
  <% end %>
</div>