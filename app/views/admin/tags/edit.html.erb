<% provide(:title, 'カテゴリ編集') %>

<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h3>カテゴリ編集</h3>
      <hr>
    </div>
  </div>
  <!-- 入力フォーム -->
  <%= render 'admin/tags/tag_form', url: "/admin/tags/#{@tag.id}" %>
  <br>
  <!-- カテゴリ内容表示 -->
  <div class="col-md-8 col-md-offset-2">
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
      	  <th class="text-center">画像</th>
          <th class="text-center">カテゴリ名</th>
        </tr>
      </thead>
      <tbody>
        <tr>
      	  <td class="text-center"><%= attachment_image_tag(@tag, :image, fallback: 'no_image.jpg', size: '90x60')%></td>
          <td class="text-center"><%= @tag.name %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

