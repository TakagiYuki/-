<div class="index-content">
  <div class="container-fluid"><!-- 流動的 -->
    <h3><center>イベント編集</center></h3>
      <hr>
        <div class="col-md-6">
          <div class="card">
            <%= attachment_image_tag(@event, :image, fallback: 'no_image.jpg', size: '300x235')%>
            <h4><%= @event.name %></h4>
            <p><%= "開催日 #{@event.date}" %> <span><%= @event.time_status_i18n %></sapn></p>
            <p><%= @event.article.truncate(64) %></p>
            <p>場所 <%= @event.prefecture%> <%= @event.city%></p>
          </div>
        </div>
        <div class="col-md-4">
          <%= form_with(model: @event, url:"/admin/events/#{@event.id}", local: true) do |f| %>
            <%= f.label :名前 %>
            <%= f.text_field :name, class: 'form-control' %>

            <%= f.label :画像 %>
            <%= f.attachment_field :image, class: 'form-control' %>

            <%= f.label :説明 %>
            <%= f.text_area :article, class: 'form-control' %>

            <%= f.label :都道府県 %>
            <%= f.select :prefecture, {北海道:'北海道',青森県:'青森県',岩手県:'岩手県',宮城県:'宮城県',秋田県:'秋田県',山形県:'山形県',福島県:'福島県',
                                       茨城県:'茨城県',栃木県:'栃木県',群馬県:'群馬県',埼玉県:'埼玉県',千葉県:'千葉県',東京都:'東京都',神奈川県:'神奈川県',
                                       新潟県:'新潟県',富山県:'富山県',石川県:'石川県',福井県:'福井県',山梨県:'山梨県',長野県:'長野県',
                                       岐阜県:'岐阜県',静岡県:'静岡県',愛知県:'愛知県',三重県:'三重県',
                                       滋賀県:'滋賀県',京都府:'京都府',大阪府:'大阪府',兵庫県:'兵庫県',奈良県:'奈良県',和歌山県:'和歌山県',
                                       鳥取県:'鳥取県',島根県:'島根県',岡山県:'岡山県',広島県:'広島県',山口県:'山口県',
                                       徳島県:'徳島県',香川県:'香川県',愛媛県:'愛媛県',高知県:'高知県',
                                       福岡県:'福岡県',佐賀県:'佐賀県',長崎県:'長崎県',熊本県:'熊本県',大分県:'大分県',宮崎県:'宮崎県',鹿児島県:'鹿児島県', 沖縄県:'沖縄県'},{ include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
            <%= f.label :市 %>
            <%= f.text_field :city, class: 'form-control' %>
            <%= f.label :番地 %>
            <%= f.text_field :street, class: 'form-control' %>
            <%= f.label :開催日 %>
            <div class='input-group date datepicker'>
               <%= f.text_field :date, class: 'form-control',placeholder: '日付' %>
               <span class="input-group-addon">
                 <span class="glyphicon glyphicon-calendar"></span>
               </span>
            </div>
            <br>
            <%= f.label :開催ステータス %>
            <%= f.radio_button :time_status, :event_before %>開催前
            <%= f.radio_button :time_status, :event_now %>開催中
    　　　　　<%= f.radio_button :time_status, :event_finsh %>開催終了

            <%= f.submit "変更を保存", class: "btn btn-primary" %>
            <%= link_to "戻る", admin_events_path, class: "btn btn-primary" %>
          <% end %>
        </div>
  </div>
</div>