<div class="container mt-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <div class="panel panel-default">
        <div class="panel-body">
          <% event_comments.each do |event_comment| %>
            <h5 class="panel-title"><%= event_comment.user.name %></h5>
            <p class="panel-text"><%= simple_format event_comment.comment %></p>
            <p class="panel-text">
              <small class="text-muted">投稿日：<%= event_comment.created_at.strftime('%Y/%m/%d') %>
              <% if event_comment.user == current_user %>
                <%= link_to '削除', event_event_comment_path(event_comment, event_comment.event_id), method: :delete, remote: true %>
              <% end %>
              </small>
            </p>
            <hr>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>