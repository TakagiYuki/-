<div class="index-content">
  <div class="container">
     <% @events.each do |event| %>
    <div class="col-lg-4">
      <div class="card"> <%= link_to event_path(event) do %><%= attachment_image_tag(event, :image, fallback: 'no_image.jpg', size: '300x235')%><% end %>
        <h4><%= event.name %></h4>
        <p><%= event.date %></p>
        <p><%= event.article %></p>
        <p><%= "開催日#{event.date}" %></p>
        <p><%= "所在地#{event.city}" %></p>
        <p><%= "開催場所#{event.place}" %></p>
        <!-- <a href="blog-ici.html" class="blue-button">Read More</a> -->
      </div>
    </div>
     <% end %>
  </div>
</div>


