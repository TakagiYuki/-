<div class="index-content">
  <div class="container">
    <% @events.each do |event| %>
      <div class="col-lg-4">
        <div class="card"> <%= link_to event_path(event) do %><%= attachment_image_tag(event, :image, fallback: 'no_image.jpg', size: '300x235')%><% end %>
          <h4><%= event.name %></h4>
          <p><%= "開催日#{event.date}" %></p>
          <p><%= event.article.truncate(64) %></p>
            <div class="time_status">
              <p><%= event.time_status %></p>
            </div>
          <p><%= "住所#{event.place}" %></p>
          <!-- <a href="blog-ici.html" class="blue-button">Read More</a> -->
          <% if event.favorited_by?(current_user) %>
            <%= link_to event_favorites_path(event), method: :delete, remote: true do %>
              <span class="glyphicon glyphicon-heart"><%= event.favorites.count%></span>
            <% end %>

            <% else %>
              <%= link_to event_favorites_path(event), method: :post, remote: true do %><!--いいねしてない時 -->
              <span class="glyphicon glyphicon-heart-empty"><%= event.favorites.count %></span>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>



