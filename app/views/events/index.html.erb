<div class="index-content">
  <div class="container-fluid"><!-- 流動的 -->

<h3>都道府県から探す</h3>
<hr>
<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#sampleModal"><span class="glyphicon glyphicon-search"></span>
  都道府県検索
</button>

<!-- モーダル・ダイアログ -->
<div class="modal fade" id="sampleModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span>×</span></button>
        <h4 class="modal-title">タイトル</h4>
      </div>
      <div class="modal-body">
        <%= form_with scope: :search, url: search_events_path, method: :get, local: true do |f| %>
          <%= f.radio_button :prefecture, :"北海道" %>北海道
          <%= f.radio_button :prefecture, :"青森県" %>青森県
          <%= f.radio_button :prefecture, :"岩手県" %>岩手県
          <%= f.radio_button :prefecture, :"宮城県" %>宮城県
          <%= f.radio_button :prefecture, :"秋田県" %>秋田県
          <%= f.radio_button :prefecture, :"山形県" %>山形県
          <%= f.radio_button :prefecture, :"福島県" %>福島県
          <%= f.radio_button :prefecture, :"茨城県" %>茨城県
          <%= f.radio_button :prefecture, :"栃木県" %>栃木県
          <%= f.radio_button :prefecture, :"群馬県" %>群馬県
          <%= f.radio_button :prefecture, :"埼玉県" %>埼玉県
          <%= f.radio_button :prefecture, :"千葉県" %>千葉県
          <%= f.radio_button :prefecture, :"東京都" %>東京都
          <%= f.radio_button :prefecture, :"神奈川県" %>神奈川県
          <%= f.radio_button :prefecture, :"新潟県" %>新潟県
          <%= f.radio_button :prefecture, :"富山県" %>富山県
          <%= f.radio_button :prefecture, :"石川県" %>石川県
          <%= f.radio_button :prefecture, :"福井県" %>福井県
          <%= f.radio_button :prefecture, :"山梨県" %>山梨県
          <%= f.radio_button :prefecture, :"長野県" %>長野県
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">閉じる</button>
        <%= f.submit :search %>
        <% end %>
      </div>
    </div>
  </div>
</div>


    <h3><center><%= "#{@area.name}エリアのイベント" %></center></h3>
    <hr>
    <h3><%= @events.count %>件のイベントを表示</h3>
    <% @events.each do |event| %>
      <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
        <div class="card">
          <%= link_to event_path(event) do %>
            <%= attachment_image_tag(event, :image, fallback: 'no_image.jpg', size: '300x235')%>
          <% end %>
          <h4><%= event.name %></h4>
          <p><%= "開催日 #{event.date}" %> <span><%= event.time_status_i18n %></sapn></p>
          <p><%= event.article.truncate(64) %></p>
          <p>場所 <%= event.prefecture%> <%= event.city%>
          <div id="favorites_buttons_<%= event.id %>">
             <%= render partial: 'favorites/favorite', locals: { event: event} %>
          </div>

        </div>
      </div>
    <% end %>
  </div>
</div>
</div>

