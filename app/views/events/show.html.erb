<div class="index-content">
  <div class="container">
    <div class="col-lg-4">
      <div class="card"> <%= attachment_image_tag(@event, :image, fallback: 'no_image.jpg', size: '300x235')%>
        <h4><%= @event.name %></h4>
        <p><%= @event.date %></p>
        <p><%= @event.article %></p>
        <p><%= "開催日#{@event.date}" %></p>
        <p><%= "開催場所#{@event.place}" %></p>
        <%= form_with model: [@event, @event_comment] do |f| %>
          <%= f.text_area :comment, class: "form-control",placeholder: "コメントをここに" %>
          <%= f.submit "送信する", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
        <% end %>
        <% @event.event_comments.each do |event_comment| %>
          <%= event_comment.comment %>
        <% end %>
      </div>
    </div>
  </div>
</div>

