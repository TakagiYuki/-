<div class="index-learge-content">
    <div class="col-lg-6">
      <div class="card">
        <%= attachment_image_tag(@event, :image, fallback: 'no_image.jpg', size: '300x260')%>
        <h4><%= @event.name.truncate(20) %></h4>
        <p><%= simple_format(@event.article) %></p>
        <p><%= "開催場所#{@event.city}" %></p>
        <div id="favorites_buttons_<%= @event.id %>">
          <%= render partial: 'favorites/favorite', locals: { event: @event} %>
        </div>
      </div>
    </div>
</div>

  <% now = Time.new.in_time_zone('Tokyo') %><!-- 現在時刻 -->
  <% now_sec = now.hour * 3600 + now.min * 60 %> <!-- 秒換算 -->
  <% open_time_sunday_sec = @event.open_time_sunday.hour * 3600 + @event.open_time_sunday.min * 60 %> <!-- 秒換算 -->
  <% close_time_sunday_sec = @event.close_time_sunday.hour * 3600 + @event.close_time_sunday.min * 60 %> <!-- 秒換算 -->
  <br>
<%= open_time_sunday_sec %>
<%= close_time_sunday_sec %>
<%= now_sec %>
<% if Date.today.wday ==0 && now_sec < close_time_sunday_sec && open_time_sunday_sec < now_sec %>
  <%= "営業中" %>
<% elsif Date.today.wday ==0 && now_sec > close_time_sunday_sec || open_time_sunday_sec > now_sec  %>
  <%= "閉店" %>
<% else %>
  <%= "ccc" %>
<% end %>
  <%# if Date.today.wday ==0 %>