<div class="index-learge-content">
    <div class="col-lg-6">
      <div class="card">
        <%= attachment_image_tag(@event, :image, fallback: 'no_image.jpg', size: '300x260')%>
        <h4><%= @event.name.truncate(20) %></h4>
        <p><%= @event.date %></p>
        <p><%= simple_format(@event.article) %></p>
        <p><%= "開催場所#{@event.city}" %></p>
        <div id="favorites_buttons_<%= @event.id %>">
          <%= render partial: 'favorites/favorite', locals: { event: @event} %>
        </div>
      </div>
    </div>
</div>
