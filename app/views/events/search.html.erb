    <hr>
    <h3><%= @events.count %>件のイベントを表示</h3>
    <% @events.each do |event| %>
      <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
        <div class="card">
          <%= link_to event_path(event) do %>
            <%= attachment_image_tag(event, :image, fallback: 'no_image.jpg', size: '300x235')%>
          <% end %>
          <h4><%= event.name %></h4>
          <p><%= "開催日 #{event.date}" %> <span><%= event.time_status_i18n %></sapn></p>
          <p><%= event.article.truncate(64) %></p>
          <p>場所 <%= event.prefecture%> <%= event.city%>
          <div id="favorites_buttons_<%= event.id %>">
             <%= render partial: 'favorites/favorite', locals: { event: event} %>
          </div>

        </div>
      </div>
    <% end %>
