<% events.each do |event| %>
  <article class="card">
    <aside class="card__aside">
      <figure class="card__figure">
        <%= link_to event_path(event) do %>
          <%= attachment_image_tag(event, :image, fallback: 'no_image.jpg')%>
        <% end %>
      </figure>
    </aside>
    <% event.tags.each do |tag| %>
      <%= link_to event_path(event) do %>
        <header class="card__header">
          <% if tag.id == 1 %>
            <h2 class="card__title--nature"><%= event.name.truncate(15) %></h2>
          <% elsif tag.id == 2 %>
            <h2 class="card__title--histroy"><%= event.name.truncate(15) %></h2>
          <% elsif tag.id == 3 %>
            <h2 class="card__title--play"><%= event.name.truncate(15) %></h2>
          <% else %>
            <h2 class="card__title--stage"><%= event.name.truncate(15) %></h2>
        </header>
      <% end %>
    <% end %>
    <div class="card__body">
      <p class="card__copy">
        <%= event.article.truncate(74) %>
      </p>
    </div>
    <footer class="card__footer">
      <a href= "http://cocoiko.blog/events/search?utf8=✓&search%5Bprefecture%5D=<%= event.prefecture %>&search%5Bname%5D=&commit=search" >
        <p class="card__copy">
         【場所】<%= event.prefecture%>
        </p>
      </a>
      <% if tag.id == 1 %>
        <%= link_to event_tag_path(tag) do %>
          <p class="card__category--nature"><%= tag.name %></p>
        <% end %>
      <% elsif tag.id == 2 %>
        <%= link_to event_tag_path(tag) do %>
          <p class="card__category--histroy"><%= tag.name %></p>
        <% end %>
      <% elsif tag.id == 3 %>
        <%= link_to event_tag_path(tag) do %>
          <p class="card__category--play"><%= tag.name %></p>
        <% end %>
      <% else %>
        <%= link_to event_tag_path(tag) do %>
          <p class="card__category--stage"><%= tag.name %></p>
        <% end %>
      <% end %>
    <% end %>
      <div id="favorites_buttons_<%= event.id %>">
        <%= render partial: 'favorites/favorite', locals: { event: event} %>
      </div>
    </footer>
  </article>
<% end %>