<div class="container__inner">
  <% events.each do |event| %>
    <div class="container__card--normal">
      <div class="top__sec6-img1">
        <%= link_to event_path(event) do %>
        <%= attachment_image_tag(event, :image, fallback: 'no_image.jpg', size: '300x260')%>
      </div>
      <% end %>
      <h2 div class="heading--normal"><%= event.name.truncate(20) %></h2>
      <p class="text--normal"><%= event.article.truncate(74) %></p>
      <p class="text--normal">場所 <%= event.prefecture%> <%= event.city%></p>

      <% event.tags.each do |tag| %>
        <span class="label label-success"><%= tag.name %></span>
      <% end %>

      <div id="favorites_buttons_<%= event.id %>">
         <%= render partial: 'favorites/favorite', locals: { event: event} %>
      </div>
      <span class="label label-success"><%= @status %></span><%= @open_date %>  <%= @close_date %>
    </div>
  <% end %>
</div>