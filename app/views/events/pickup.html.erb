<!-- ページタイトル -->
<% provide(:title, 'オススメ記事') %>

<!-- ナビゲーションバー -->
<%= render 'shared/category_nav' %>

<!-- パンくずリスト -->
<div class = "pan-list">
　<%= link_to root_url, class: "pan-list__link", method: :get do %>
    <i class="fas fa-home"></i>ホーム
  <% end %>
  <span>></span>
  <%= link_to pickup_path, class: "pan-list__link", method: :get do %>
    <span>オススメ記事一覧</span>
  <% end %>
</div>

<div class="box">
  <div class="box__left">
    <!-- 検索 -->
    <%= render 'shared/search_prefacture' %>
    <!-- メイン記事 -->
    <%= render 'events/event_card', events: @events_pickup_all %>
  </div>

  <!-- サブメニュー -->
  <div class="box__right">
    <%= render 'events/event_ranking', events: @events_ranking %>
    <%= render 'shared/section_favorite' %>
    <%= render 'shared/section_pickup', events: @events_pickup %>
  </div>
</div>

<!-- フッター -->
<%= render 'shared/footer' %>