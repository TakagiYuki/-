<div class="main-visual fade-in-bottom ">
  <h2>お気に入りの観光地を探してみよう!</h2>
</div>

<div class="top">
  <img src="/assets/top.jpeg" alt="画像のサンプル" width="100%" height="600px">
</div>


<div class="index-sub-content">
  <div class="container">
  	<h3>新着のイベント</h3>
    <hr>
      <% @events_new.first(4).each do |event| %>
      <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6">
          <div class="card">
            <%= link_to event_path(event) do %>
              <div class="new">
                <%= attachment_image_tag(event, :image, fallback: 'no_image.jpg', size: '180x141')%>
              </div>
            <% end %>
            <h4><%= event.name %></h4>
            <p><%= event.prefecture%> | <%= event.city%></p>
            <p>開催期間<%= event.date%></p>
            <div id="favorites_buttons_<%= event.id %>">
              <%= render partial: 'favorites/favorite', locals: { event: event} %>
            </div>
          </div>
        </div>
      <% end %>
  </div>
</div>

<div class="index-sub-content">
  <div class="container">
  <h3>各エリアの人気イベント</h3>
  <hr>
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <table>
        <tr>
          <!-- params[:area_id]にidを送る-->
          <th><%= link_to "北海道", root_url(area_id: 1), remote: true %></th>
          <th><%= link_to "東北", root_url(area_id: 2), remote: true %></th>
          <th><%= link_to "関東", root_url(area_id: 3), remote: true %></th>
          <th><%= link_to "中部", root_url(area_id: 4), remote: true %></th>
          <th><%= link_to "関西", root_url(area_id: 5), remote: true %></th>
          <th><%= link_to "中国", root_url(area_id: 6), remote: true %></th>
          <th><%= link_to "四国", root_url(area_id: 7), remote: true %></th>
          <th><%= link_to "九州・沖縄", root_url(area_id: 8), remote: true %></th>
        </tr>
      </table>
  <!------------------部分テンプレートranking.html.erb--------------------->
      <div class="favorite">
        <%= render 'ranking', events_ranking_area: @events_ranking_area %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6">
    <h3>エリアから探す</h3>
    <hr>
  </div>
</div>

  <div class="main">
    <div class="blog"></div>
        <div class="sidebar">
        	<div id="map"></div>
        </div>
    </div>
