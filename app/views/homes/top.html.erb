<%= javascript_include_tag "swiper.min.js" %>
<%= javascript_include_tag "homes/top.js" %>
<% provide(:title, 'ホーム') %>

<!-- 日本地図画像 -->
<div class="top">
  <%= image_tag asset_path("map-japan.png", alt: "観光") %>
</div>

<!-- スライダー -->
<div class="swiper-container swiper2">
  <div class="swiper-wrapper">
    <div class="swiper-slide">
      <div class="slide-img"><%= image_tag asset_path("img_01.jpg", alt: "観光") %></div>
      <div class="slide-content">
        <h1>ここいこ。へようこそ</h1>
        <p>お気に入りの観光地を探してみよう</p>
        <!-- <div class="caption">caption 01<%#=link_to root_url  %></div> -->
      </div>
    </div><!-- end of .swiper-slide -->
    <div class="swiper-slide">
      <div class="slide-img"><%= image_tag asset_path("img_02.jpg", alt: "観光") %></div>
      <div class="slide-content">
        <h2>ここいこ。へようこそ</h2>
        <p></p>
        <div class="caption"><%=link_to "Click to go on a trip !", event_path(1), :style=>"color:white;" %></div>
      </div>
    </div><!-- end of .swiper-slide -->
    <div class="swiper-slide">
      <div class="slide-img"><%= image_tag asset_path("img_03.jpg", alt: "観光") %></div>
      <div class="slide-content">
        <h3>ここいこ。へようこそ</h3>
        <p></p>
        <div class="caption"><%=link_to "Click to go on a trip !", event_path(2), :style=>"color:white;" %></div>
      </div>
    </div><!-- end of .swiper-slidet -->
  </div><!-- end of .swiper-wrapper -->
  <div class="swiper-pagination swiper-pagination-white"></div>
  <div class="swiper-button-prev"></div>
  <div class="swiper-button-next"></div>
</div><!-- end of .swiper-container -->


<!-- ボタン -->
<%= render 'homes/select_hokkaido' %>
<%= render 'homes/select_tohoku' %>
<%= render 'homes/select_kanto' %>
<%= render 'homes/select_cyubu' %>
<%= render 'homes/select_kansai' %>
<%= render 'homes/select_cyugoku' %>
<%= render 'homes/select_shikoku' %>
<%= render 'homes/select_kyusyu' %>

<div class="container">
  <h3>カテゴリーから探す</h3>
  <hr>
  <div class="contents-frame">
    <% @tags.each do |tag| %>
      <div class="col-xs-6 col-md-3">
        <div class="tag-content">
          <%= link_to event_tag_path(tag) do %>
            <td class="text-center"><%= attachment_image_tag(tag, :image, fallback: 'no_image.jpg', size: '252x200')%>
            <p><%= tag.name %></p>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="container">
  <h3>新着のイベント</h3>
  <hr>
  <%= render 'events/event_small_content', events: @events_new %>
</div>

