<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= favicon_link_tag('favicon.ico') %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= include_gon %>
    <!-- <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css"> -->
    <meta name="twitter:card" content="summary_large_image" /> <!--①-->
    <meta name="twitter:site" content="@Programming_nya" /> <!--②-->
    <meta property="og:url" content="https://cocoiko.blog" /> <!--③-->
    <meta property="og:title" content="ここいこ" /> <!--④-->
    <meta property="og:description" content="記事の要約（ディスクリプション）" /> <!--⑤-->
    <meta property="og:image" content="http://www.granfairs.com/assets/img/fb-ogp-01.png" /> <!--⑥-->
  </head>

  <body>
    <div class="flash">
      <%= flash[:success] %>
    </div>
    <div class="alert1">
      <%= flash[:alert] %>
    </div>
    <%= render 'layouts/header' %>
    <%= render 'shared/login_modal' %>
    <p id="page-top">
      <a href="#"><i class="fas fa-arrow-up"></i></a>
    </p>
    <%= yield %>
  </body>
</html>
