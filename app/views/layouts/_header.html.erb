<header>
  <h1 class=fade-in-left>
    <%= link_to "ここいこ。", root_url, id: "logo" %>
  </h1>
  <nav class="pc-nav fade-in-right">
    <ul>
      <!-- adminユーザー -->
      <% if logged_in? && current_user.admin %>
        <li><%= "ようこそ#{current_user.name}さん" %></li>
        <li><%= link_to ' タグ作成', admin_tags_path, class: 'glyphicon glyphicon-log-in' %></li>
        <li><%= link_to ' イベント作成', admin_events_path, class: 'glyphicon glyphicon-log-in' %></li>
        <li><%= link_to ' エリア作成', admin_areas_path, class: 'glyphicon glyphicon-log-in' %></li>
        <li><%= link_to ' イベント', events_path, class: 'glyphicon glyphicon-log-in' %></li>
        <li><%= link_to ' ログアウト', session_path(current_user), method: :delete, class: 'glyphicon glyphicon-log-in' %></li>
        <%= link_to user_favorites_path(current_user), method: :get do %>
          <i class="far fa-heart"></i>
        <% end %>
        <li><i class="fas fa-search" data-toggle="modal" data-target="#searchModal"></i><li>
        <%= link_to "https://twitter.com/share?url=#{request.url}&text=文", target: :_blank do %>
          <span data-toggle="tooltip" data-placement="bottom" title="Share"><i class="fab fa-twitter"></i></span>
        <% end %>



      <!-- ユーザー -->
      <% elsif logged_in? && !current_user.admin %>
      <li><%= "ようこそ#{current_user.name}さん" %></li>
      <li><%= link_to '　ホーム', root_url, class: 'glyphicon glyphicon-log-in' %></li>
      <li><%= link_to '　マイページ', user_path(current_user), class: 'glyphicon glyphicon-log-in' %></li>
      <li><%= link_to '  ログアウト', session_path(current_user), method: :delete, class: 'glyphicon glyphicon-log-in' %></li>
      <%= link_to user_favorites_path(current_user), method: :get do %>
        <i class="far fa-heart"></i>
      <% end %>
      <li><i class="fas fa-search" data-toggle="modal" data-target="#searchModal"></i><li>
      <%= link_to "https://twitter.com/share?url=#{request.url}&text=文", target: :_blank do %>
        <span data-toggle="tooltip" data-placement="bottom" title="Share"><i class="fab fa-twitter"></i></span>
      <% end %>



      <!-- ログインしていないユーザー -->
      <% else %>
        <li><%= link_to '　ホーム', root_url, class: 'glyphicon glyphicon-log-in' %></li>
        <li><%= link_to '  ログイン', new_session_path, class: 'glyphicon glyphicon-log-in' %></li>
        <li><%= link_to '  新規登録', new_user_path, class: 'glyphicon glyphicon-log-in' %></li>
        <li><%= link_to '  簡単ログイン(user)', users_guest_new_path, method: :post, class: 'glyphicon glyphicon-log-in' %></li>
        <li><%= link_to '  簡単ログイン(admin)', users_admin_new_path, method: :post, class: 'glyphicon glyphicon-log-in' %></li>

        <li><i class="far fa-heart" data-toggle="modal" data-target="#guestModal"></i></li>
        <li><i class="fas fa-search" data-toggle="modal" data-target="#searchModal"></i><li>

        <%= link_to "https://twitter.com/share?url=#{request.url}&text=文", target: :_blank do %>
          <span data-toggle="tooltip" data-placement="bottom" title="Share"><i class="fab fa-twitter"></i></span>
        <% end %>
    　<% end %>
    </ul>
  </nav>
</header>