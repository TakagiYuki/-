<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-3">
      <h3>エリア追加</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_with(model: @area, local: true) do |f| %>
        <%#= render 'shared/error_messages' %>
        <%= f.label :都道府県 %>
        <%= f.select :number, Area.numbers.keys, {prompt: '選択してください'}, class: 'form-control btn btn-info' %>
        <%= f.submit "追加", class: "btn btn-primary" %>
      <% end %>
    </div>

    <div class="col-md-6 col-md-offset-3">
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>エリア名</th>
            <th>編集</th>
          </tr>
        </thead>
        <tbody>
          <% @areas.each do |area| %>
          <tr>
            <td><%= area.number %></td>
            <td><%= link_to "編集する", areas_path, class: "btn btn-primary" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>