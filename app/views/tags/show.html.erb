<% provide(:title, @tag.name) %>

    <ul class="nav1">
      <% @tags.each_with_index do |tag, i| %>
        <li class="nav1__item<%= i %>"><%= link_to event_tag_path(tag) do %>
          <%= tag.name %>
        </li>
        <% end %>
      <% end %>
    </ul>



<div class="box">
  <div class="box__left">
    <%= render 'shared/find' %>
		    <% @events.each do |event| %>
          <div class="container__card--normal">
            <div class="sec1-img1">
    		      <%= link_to event_path(event) do %>
    		        <%= attachment_image_tag(event, :image, fallback: 'no_image.jpg')%>
              <% end %>
            </div>
            <% event.tags.each do |tag| %>
              <% if tag.id == 1 %>
		            <h2 div class="heading--normal"><%= event.name.truncate(20) %></h2>
              <% elsif tag.id == 2 %>
                <h2 div class="heading--normal2"><%= event.name.truncate(20) %></h2>
              <% elsif tag.id == 3 %>
                <h2 div class="heading--normal3"><%= event.name.truncate(20) %></h2>
              <% else %>
                <h2 div class="heading--normal4"><%= event.name.truncate(20) %></h2>
              <% end %>

		          <p class="text--normal"><%= event.article.truncate(74) %></p>
		          <p class="text--normal">【場所】<%= event.prefecture%></p>

              <% if tag.id == 1 %>
		            <p class="text_date1"> <%= tag.name %></p>
              <% elsif tag.id == 2 %>
                <p class="text_date2"> <%= tag.name %></p>
              <% elsif tag.id == 3 %>
                <p class="text_date3"> <%= tag.name %></p>
              <% else %>
                <p class="text_date4"> <%= tag.name %></p>
              <% end %>
		        <% end %>
    	      <div id="favorites_buttons_<%= event.id %>">
    	        <%= render partial: 'favorites/favorite', locals: { event: event} %>
    	      </div>
    	      <span class="label label-success"><%= @status %></span><%= @open_date %>  <%= @close_date %>
		      </div>
        <% end %>
  </div>
    <div class="box__right">
      <p class="box__right__heading">人気記事ランキング</p>
      <% @events_ranking_area.each do |event| %>
        <article>
          <figure>
        	<%= link_to event_path(event) do %>
            <%= attachment_image_tag(event, :image, fallback: 'no_image.jpg')%>
          <% end %>
          </figure>
          <div class="text_content">
            <% event.tags.each do |tag| %>
              <% if tag.id == 1 %>
        	      <p class="text_date1"> <%= tag.name %></p>
                <p class="nomal-card-heading1"><%= event.name.truncate(9) %></p>
        	    <% elsif tag.id == 2 %>
        	      <p class="text_date2"> <%= tag.name %></p>
                <p class="nomal-card-heading2"><%= event.name.truncate(9) %></p>
              <% elsif tag.id == 3 %>
                <p class="text_date3"> <%= tag.name %></p>
                <p class="nomal-card-heading3"><%= event.name.truncate(9) %></p>
              <% elsif tag.id == 4 %>
                <p class="text_date3"> <%= tag.name %></p>
                <p class="nomal-card-heading4"><%= event.name.truncate(9) %></p>
              <% end %>
            <% end %>
        	  <p class="text_excerpt"><%= event.prefecture %></p>
          </div>
        </article>
      <% end %>
      <p class="box__right__heading">人気記事ランキング一覧を見る</p>

      <p class="box__right__heading">いいねした記事</p>
    </div>
</div>
